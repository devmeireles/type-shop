{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@test/*": [
                "./test/*"
            ],
            "@useCases/*": [
                "./src/useCases/*"
            ],
            "@repositories/*": [
                "./src/repositories/*"
            ],
            "@entities/*": [
                "./src/entities/*"
            ],
            "@config/*": [
                "./src/config/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@middlewares/*": [
                "./src/middlewares/*"
            ],
            "@interfaces/*": [
                "./src/interfaces/*"
            ]
        },
        "rootDirs": [
            "./src",
            "./test"
        ],
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts"
    ],
    "exclude": [
        "./node_modules/*",
        "dist"
    ]
}